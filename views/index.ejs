<% include partials/header %>

<div class="jumbotron">
  <br />

  <h2 class="display-4" sytle="margin-top: 20">Welcome to  Online RV Rentals </h2>
  <p class="lead">Start your travel in the world!</p>
  <hr class="my-4" />
  <% if(user && user.isAdmin) { %>
  <a class="btn btn-info btn-lg" href="cars/new" role="button">Add a new car</a>
  <% } %>
  <p></p>
  <form action="/cars" method="GET" class="form-inline" id="car-search">
    <div class="form-group">
      <input
        type="text"
        name="search"
        placeholder="Car search..."
        class="form-control"
      />
      <select
        name="type"
        id="setected_type"
        style="height: 36px"
        class="form-control"
      >
        <option value="all">All</option>
        <option value="classa">classA</option>
        <option value="classb">classB</option>
        <option value="classc">classC</option>
        <option value="trailer">trailer</option>
      </select>
    </div>
  </form>
</div>

<div class="container">
  <div class="row" id="car-grid">
    <% cars.forEach( car => { %> <% if (user && user.isAdmin) {%>
    <div class="md-col-4" style="margin-left: 5%">
      <a href="cars/<%= car._id %>">
        <img
          src="../images/<%= car.image %>"
          style="width: 400px; height: 200px"
        />
      </a>
      <div class="caption" style="text-align: center; font-size: 1.2rem">
        <a href="cars/<%= car._id %>"> <%= car.model %></a>
      </div>
    </div>
    <% } else { %> <% if (car.count > 0) {%>
    <div class="md-col-4" style="margin-left: 5%">
      <a href="cars/<%= car._id %>">
        <img
          src="../images/<%= car.image %>"
          style="width: 400px; height: 200px"
        />
      </a>
      <div class="caption" style="text-align: center; font-size: 1.2rem">
        <a href="cars/<%= car._id %>"> <%= car.model %></a>
      </div>
    </div>
    <% } %> <% } %> <% }); %>
  </div>

  <br />
  <br />

  <div class="container" style="text-align: center; margin: auto">
    <% if (currentPage ==1 && numOfPages>1) {%> <%= parseInt(currentPage) %>
    <span> </span
    ><a href="/cars/<%= parseInt(currentPage) + 1 %>"
      ><i class="fas fa-chevron-right"></i
    ></a>
    <%} else if(currentPage < numOfPages) { %>
    <a href="/cars/<%= parseInt(currentPage) - 1 %>">
      <i class="fas fa-chevron-left"></i
    ></a>
    <%= parseInt(currentPage) %> <span> </span>
    <a href="/cars/<%= parseInt(currentPage) + 1 %>">
      <i class="fas fa-chevron-right"></i
    ></a>
    <%} else if(currentPage == numOfPages && numOfPages > 1) { %>
    <a href="/cars/<%= parseInt(currentPage) - 1 %>">
      <i class="fas fa-chevron-left"></i
    ></a>
    <%= parseInt(currentPage) %> <span> </span>
    <% } %>
  </div>

  <br />
  <br />
  <br />
  <br />
  <br />
  <% include partials/footer %>
</div>
